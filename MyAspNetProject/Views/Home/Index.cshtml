@model IEnumerable<MyAspNetProject.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Designation</th>
        <th>Salary</th>
        <th>Married</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Gender</td>
                <td>@emp.Age</td>
                <td>@emp.Designation</td>
                <td>@emp.Salary</td>
                <td>@emp.Married</td>
                <td>@emp.Description</td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="8">No employees found.</td></tr>
    }
    </tbody>
</table>