@model IEnumerable<MyAspNetProject.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Employee List</h1>

<p>
    <a asp-controller="Home" asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Gender)</th>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Age)</th>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Designation)</th>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Salary)</th>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Married)</th>
        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Gender</td>
                <td>@emp.Age</td>
                <td>@emp.Designation</td>
                <td>@emp.Salary</td>
                <td>@emp.Married</td>
                <td>@emp.Description</td>
                <td>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@emp.Id">Edit</a>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@emp.Id">Details</a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="9" class="text-center">No employees found.</td></tr>
    }
    </tbody>
</table>